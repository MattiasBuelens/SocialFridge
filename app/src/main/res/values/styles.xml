<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="AppTheme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_background</item>
        <item name="background">@color/actionbar_background</item>
    </style>

    <style name="AppTheme.Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/header_padding_top</item>
        <item name="android:paddingBottom">@dimen/header_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/header_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/header_padding_horizontal</item>
    </style>

    <style name="AppTheme.HeaderTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/header_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.HeaderSummary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sub_header_size</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.HeaderSingleTitle" parent="AppTheme.HeaderTitle">
        <item name="android:paddingTop">@dimen/header_padding_top</item>
        <item name="android:paddingBottom">@dimen/header_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/header_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/header_padding_horizontal</item>
    </style>

    <!-- Card styles -->
    <style name="AppTheme.CardLayout">
        <item name="android:background">@color/card_container_background</item>
    </style>

    <style name="AppTheme.CardShadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/card_shadow</item>
        <item name="android:src">@drawable/card_shadow</item>
    </style>

    <style name="AppTheme.CardOuter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">@dimen/card_outer_margin_top</item>
        <item name="android:layout_marginTop">@dimen/card_outer_margin_bottom</item>
        <item name="android:paddingTop">@dimen/card_outer_padding_top</item>
        <item name="android:paddingBottom">@dimen/card_outer_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/card_outer_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/card_outer_padding_horizontal</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>

    <style name="AppTheme.CardInner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/card_inner_padding_left</item>
        <item name="android:paddingRight">@dimen/card_inner_padding_right</item>
        <item name="android:paddingTop">@dimen/card_inner_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/card_inner_padding_vertical</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="AppTheme.CardTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_title</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="AppTheme.CardList">
        <item name="android:cacheColorHint">@color/card_container_background</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <!-- Tags -->
    <style name="AppTheme.Tag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tag_label_size</item>
        <item name="android:textColor">@color/tag_label_color</item>
        <item name="android:background">@color/tag_background</item>
        <item name="android:paddingLeft">@dimen/tag_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/tag_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/tag_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/tag_padding_vertical</item>
        <item name="android:layout_marginBottom">@dimen/tag_margin_bottom</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
