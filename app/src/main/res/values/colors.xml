<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Android ICS color palette -->
    <color name="ics_blue">#33B5E5</color>
    <color name="ics_purple">#AA66CC</color>
    <color name="ics_green">#99CC00</color>
    <color name="ics_orange">#FFBB33</color>
    <color name="ics_red">#FF4444</color>
    <color name="ics_dark_blue">#0099CC</color>
    <color name="ics_dark_purple">#9933CC</color>
    <color name="ics_dark_green">#669900</color>
    <color name="ics_dark_orange">#FF8800</color>
    <color name="ics_dark_red">#CC0000</color>

    <!-- Application-specific accent color -->
    <color name="apptheme_accent">#73b5e6</color>

    <!-- Background color of the action bar -->
    <color name="actionbar_background">@color/apptheme_accent</color>

    <!-- Color of the text above the dish photo in the dish detail view -->
    <color name="dish_detail_photo_label_color">#eeeeee</color>

    <!-- Cards -->
    <color name="card_container_background">#e5e5e5</color>
    <color name="card_pressed">#ebebeb</color>

    <!-- Tags -->
    <color name="tag_label_color">@android:color/white</color>
    <color name="tag_background">@color/ics_green</color>

    <!-- Party role colors -->
    <color name="party_role_host_background">@color/ics_green</color>
    <color name="party_role_partner_background">@color/ics_purple</color>
    <color name="party_role_invitee_background">@color/ics_orange</color>
    <color name="party_role_unknown_background">@android:color/darker_gray</color>

    <!-- Party status colors -->
    <color name="party_status_inviting_background">@color/ics_blue</color>
    <color name="party_status_planning_background">@color/ics_dark_orange</color>
    <color name="party_status_planned_background">@color/ics_dark_green</color>
    <color name="party_status_disbanded_background">@color/ics_dark_red</color>

</resources>