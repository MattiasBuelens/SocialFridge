<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    tools:context="be.kuleuven.cs.chikwadraat.socialfridge.TimeSlotActivity">

    <TextView
        android:id="@+id/time_text_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/time_day"
        android:textAppearance="?android:attr/listSeparatorTextViewStyle" />

    <RadioGroup
        android:id="@+id/time_day_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_text_day"
        android:layout_marginBottom="@dimen/section_margin"
        android:layout_marginTop="@dimen/section_margin"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/time_action_choose_today"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="@string/time_choose_today"
            android:textAllCaps="true" />

        <RadioButton
            android:id="@+id/time_action_choose_tomorrow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:text="@string/time_choose_tomorrow"
            android:textAllCaps="true" />

    </RadioGroup>

    <TextView
        android:id="@+id/time_text_slots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/time_day_options"
        android:text="@string/time_time_slots"
        android:textAppearance="?android:attr/listSeparatorTextViewStyle" />

    <fragment
        android:id="@+id/time_slots_fragment"
        android:name="be.kuleuven.cs.chikwadraat.socialfridge.TimeSlotsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_text_slots"
        tools:layout="@layout/fragment_timeslots" />

    <Button
        android:id="@+id/time_action_find_partners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/time_find_partners"
        android:textAllCaps="true" />


</RelativeLayout>