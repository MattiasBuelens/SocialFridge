<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    tools:context="be.kuleuven.cs.chikwadraat.socialfridge.TimeSlotActivity">

    <TextView
        android:id="@+id/party_partners_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/time_day"
        android:textAppearance="?android:attr/listSeparatorTextViewStyle" />



    <Button
        android:id="@+id/time_action_choose_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="@string/time_action_choose_today"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/party_partners_header"
        android:layout_marginBottom="@dimen/section_margin"
        android:layout_marginTop="@dimen/section_margin" />

    <Button
        android:id="@+id/time_action_choose_tomorrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="@string/times_action_choose_tomorrow"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/party_partners_header"
        android:layout_marginBottom="@dimen/section_margin"
        android:layout_marginTop="@dimen/section_margin" />
