<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="be.kuleuven.cs.chikwadraat.socialfridge.party.PartnersFragment"
        android:id="@+id/partners_fragment"
        tools:layout="@layout/fragment_party_partners" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="be.kuleuven.cs.chikwadraat.socialfridge.TimeSlotsFragment"
        android:id="@+id/time_slots_fragment"
        tools:layout="@layout/fragment_timeslots"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/partners_fragment" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:layout_alignParentEnd="false"
        android:gravity="bottom">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/party_join"
            android:id="@+id/button"
            android:layout_below="@+id/time_slots_fragment"
            android:layout_toRightOf="@+id/button2"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:layout_gravity="bottom" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/party_decline"
            android:id="@+id/button2"
            android:layout_below="@+id/time_slots_fragment"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:layout_gravity="bottom" />
    </LinearLayout>

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="be.kuleuven.cs.chikwadraat.socialfridge.party.PartnersFragment"
        android:id="@+id/place_fragment"
        tools:layout="@layout/fragment_place"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/time_slots_fragment" />

</RelativeLayout>