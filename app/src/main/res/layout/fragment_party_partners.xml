<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="be.kuleuven.cs.chikwadraat.socialfridge.party.fragments.PartnersFragment">

    <TextView
        android:id="@+id/party_partners_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/section_margin"
        android:text="@string/party_partners"
        android:textAppearance="?android:attr/listSeparatorTextViewStyle" />

    <be.kuleuven.cs.chikwadraat.socialfridge.widget.ExpandableGridView
        android:id="@+id/party_partners_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@android:color/transparent"
        android:numColumns="@integer/party_partners_grid_column_count"
        tools:listitem="@layout/partner_list_item" />

</LinearLayout>