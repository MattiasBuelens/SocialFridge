<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.CardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    tools:context="be.kuleuven.cs.chikwadraat.socialfridge.party.fragments.IngredientsFragment">

    <ListView
        android:id="@+id/fridge_ingredient_list"
        style="@style/AppTheme.CardList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:listSelector="@android:color/transparent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:listitem="@layout/fridge_list_item" />
</FrameLayout>
