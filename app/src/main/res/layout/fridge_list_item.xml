<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.CardOuter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/AppTheme.CardInner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ingredient_pic"
            android:layout_width="@dimen/com_facebook_profilepictureview_preset_size_small"
            android:layout_height="@dimen/com_facebook_profilepictureview_preset_size_small"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            tools:src="@drawable/eggs" />

        <TextView
            android:id="@+id/ingredient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/text_divider_margin"
            android:layout_marginStart="@dimen/text_divider_margin"
            android:layout_toEndOf="@+id/ingredient_pic"
            android:layout_toLeftOf="@+id/item_quantity"
            android:layout_toRightOf="@+id/ingredient_pic"
            android:layout_toStartOf="@+id/item_quantity"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="Ingredient Name" />

        <TextView
            android:id="@+id/item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/text_divider_margin"
            android:layout_marginStart="@dimen/text_divider_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="6 pcs" />

    </RelativeLayout>

    <!--suppress AndroidLintContentDescription -->
    <ImageView
        style="@style/AppTheme.CardShadow"
        android:scaleType="centerCrop" />

</LinearLayout>