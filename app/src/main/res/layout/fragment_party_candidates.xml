<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.CardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="be.kuleuven.cs.chikwadraat.socialfridge.party.fragments.CandidatesFragment">

    <LinearLayout
        android:id="@+id/party_candidates_header"
        style="@style/AppTheme.Header">

        <be.kuleuven.cs.chikwadraat.socialfridge.widget.LightTextView
            style="@style/AppTheme.HeaderTitle"
            android:text="@string/party_candidates" />

        <TextView
            android:id="@+id/party_candidates_summary"
            style="@style/AppTheme.HeaderSummary"
            android:text="@string/party_candidates_summary" />

    </LinearLayout>

    <ListView
        android:id="@+id/party_candidates_list"
        style="@style/AppTheme.CardList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:listSelector="@android:color/transparent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:listitem="@layout/candidate_list_item" />

</LinearLayout>