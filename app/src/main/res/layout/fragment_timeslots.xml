<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="be.kuleuven.cs.chikwadraat.socialfridge.party.TimeSlotsFragment"
    android:rowCount="1"
    android:columnCount="1">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/party_partners_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/section_margin"
        android:text="@string/party_create_title"
        android:textAppearance="?android:attr/listSeparatorTextViewStyle" />


    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time_slot_grid"
        tools:listitem="@layout/timeslot"
        android:numColumns="@integer/time_timeslots_grid_column_count"
        android:layout_gravity="left|top" />

</LinearLayout>
