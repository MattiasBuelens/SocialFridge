<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">
    <servlet>
        <servlet-name>SystemServiceServlet</servlet-name>
        <servlet-class>com.google.api.server.spi.SystemServiceServlet</servlet-class>
        <init-param>
            <param-name>services</param-name>
            <param-value>
                be.kuleuven.cs.chikwadraat.socialfridge.UserEndpoint,
                be.kuleuven.cs.chikwadraat.socialfridge.UserDeviceEndpoint,
                be.kuleuven.cs.chikwadraat.socialfridge.PartyEndpoint
            </param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>SystemServiceServlet</servlet-name>
        <url-pattern>/_ah/spi/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MessageWorker</servlet-name>
        <servlet-class>be.kuleuven.cs.chikwadraat.socialfridge.MessageWorker</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MessageWorker</servlet-name>
        <url-pattern>/_ah/queue/messaging</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>queues</web-resource-name>
            <url-pattern>/_ah/queue/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>
